            gap: 30px;
        }
        
        .clock-title {
            color: #f0f0f0;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 10px;
            text-shadow: 0 0 10px rgba(0, 200, 255, 0.7);
        }
        
        .clock {
            display: flex;
            gap: 20px;
            perspective: 1000px;
        }
        
        .time-section {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .time-label {
            color: #aaa;
            font-size: 1.2rem;
            margin-top: 10px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
        
        /* 翻頁卡片樣式 */
        .flip-card {
            width: 140px;
            height: 180px;
            position: relative;
            margin-bottom: 5px;
        }
        
        .top-card, .bottom-card {
            width: 100%;
            height: 50%;
            position: absolute;
            overflow: hidden;
            border-radius: 12px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 6rem;
            font-weight: bold;
            color: #f0f0f0;
        }
        
        .top-card {
            top: 0;
            background-color: #222;
            border-bottom: 1px solid #333;
            line-height: 180px;
        }
        
        .bottom-card {
            bottom: 0;
            background-color: #1a1a1a;
            line-height: 0;
        }
        
        /* 翻頁動畫卡片 */
        .flip-animation {
            position: absolute;
            width: 100%;
            height: 50%;
            top: 0;
            background-color: #222;
            border-radius: 12px;
            transform-origin: bottom;
            transform-style: preserve-3d;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 6rem;

<body>
    <div class="clock-container">
        <h1 class="clock-title">翻頁時鐘</h1>
        
        <div class="clock">
            <!-- 小時 -->
            <div class="time-section">
                <div class="flip-card" id="hours-tens">
                    <div class="top-card">0</div>
                    <div class="bottom-card">0</div>
                </div>
                <div class="time-label">小時</div>
            </div>
            
            <div class="time-section">
                <div class="flip-card" id="hours-ones">
                    <div class="top-card">0</div>
                    <div class="bottom-card">0</div>
                </div>
            </div>
            
            <!-- 分隔符號 -->
            <div class="separator">
                <span>:</span>
            </div>
            
            <!-- 分鐘 -->
            <div class="time-section">
                <div class="flip-card" id="minutes-tens">
                    <div class="top-card">0</div>
                    <div class="bottom-card">0</div>
                </div>
                <div class="time-label">分鐘</div>
            </div>
            
            <div class="time-section">
                <div class="flip-card" id="minutes-ones">
                    <div class="top-card">0</div>
                    <div class="bottom-card">0</div>
                </div>
            </div>
            
            <!-- 分隔符號 -->
            <div class="separator">
                <span>:</span>
            </div>
            
            <!-- 秒鐘 -->
            <div class="time-section">
                <div class="flip-card" id="seconds-tens">
                    <div class="top-card">0</div>
                    <div class="bottom-card">0</div>
                </div>
                <div class="time-label">秒鐘</div>
            </div>
            
            <div class="time-section">
                <div class="flip-card" id="seconds-ones">
                    <div class="top-card">0</div>
                    <div class="bottom-card">0</div>
                </div>
            </div>
        </div>
        
        <!-- 日期顯示 -->
        <div class="date-display" id="dateDisplay"></div>
        
        <!-- 控制按鈕 -->
        <div class="controls">
            <button id="themeToggle">切換主題</button>
            <button id="formatToggle">12/24 小時制</button>
        </div>
    </div>

    <script>
        // 取得所有需要操作的 DOM 元素
        const hoursTensCard = document.getElementById('hours-tens');
        const hoursOnesCard = document.getElementById('hours-ones');
        const minutesTensCard = document.getElementById('minutes-tens');
        const minutesOnesCard = document.getElementById('minutes-ones');
        const secondsTensCard = document.getElementById('seconds-tens');
        const secondsOnesCard = document.getElementById('seconds-ones');
        const dateDisplay = document.getElementById('dateDisplay');
        const themeToggle = document.getElementById('themeToggle');
        const formatToggle = document.getElementById('formatToggle');
        
        // 狀態變數
        let is24HourFormat = true;
        let isDarkTheme = true;
        let currentTime = {
            hours: 0,
            minutes: 0,
            seconds: 0
        };
        let previousTime = {
            hours: 0,
            minutes: 0,
            seconds: 0
        };
        
        // 初始化時鐘
        function initClock() {
            updateTime();
            updateDate();
            
            // 每秒更新一次時間
            setInterval(() => {
                updateTime();
            }, 1000);
            
            // 每分鐘更新一次日期（避免午夜時日期沒更新）
            setInterval(() => {
                updateDate();
            }, 60000);
            
            // 主題切換按鈕
            themeToggle.addEventListener('click', toggleTheme);
            
            // 時間格式切換按鈕
            formatToggle.addEventListener('click', toggleTimeFormat);
        }
        
        // 更新時間
        function updateTime() {
            const now = new Date();
            
            let hours = now.getHours();
            const minutes = now.getMinutes();
            const seconds = now.getSeconds();
            
            // 儲存之前的時間
            previousTime = {...currentTime};
            
            // 如果不是24小時制，轉換為12小時制
            if (!is24HourFormat) {
                hours = hours % 12 || 12;
            }
            
            currentTime = {
                hours: hours,
                minutes: minutes,
                seconds: seconds
            };
            
            // 更新時鐘顯示
            updateClockDigits();
        }
        
        // 更新時鐘數字
        function updateClockDigits() {
            // 格式化數字為兩位數
            const hoursStr = currentTime.hours.toString().padStart(2, '0');
            const minutesStr = currentTime.minutes.toString().padStart(2, '0');
            const secondsStr = currentTime.seconds.toString().padStart(2, '0');
            
            // 更新小時
            if (currentTime.hours !== previousTime.hours) {
                flipDigit(hoursTensCard, hoursStr[0]);
                flipDigit(hoursOnesCard, hoursStr[1]);
            }
            
            // 更新分鐘
            if (currentTime.minutes !== previousTime.minutes) {
                flipDigit(minutesTensCard, minutesStr[0]);
                flipDigit(minutesOnesCard, minutesStr[1]);
            }
            
            // 更新秒鐘
            if (currentTime.seconds !== previousTime.seconds) {
                flipDigit(secondsTensCard, secondsStr[0]);
                flipDigit(secondsOnesCard, secondsStr[1]);
            }
        }
        
        // 翻頁動畫
        function flipDigit(cardElement, newDigit) {
            // 取得當前顯示的數字
            const topCard = cardElement.querySelector('.top-card');
            const bottomCard = cardElement.querySelector('.bottom-card');
            const currentDigit = topCard.textContent;
            
            // 如果數字沒變，不執行翻頁動畫
            if (currentDigit === newDigit) return;
            
            // 創建翻頁動畫元素
            const flipTop = document.createElement('div');
            flipTop.className = 'flip-animation flip-top';
            flipTop.textContent = currentDigit;
            
            const flipBottom = document.createElement('div');
            flipBottom.className = 'flip-animation flip-bottom';
            flipBottom.textContent = newDigit;
            
            // 添加到卡片中
            cardElement.appendChild(flipTop);
            cardElement.appendChild(flipBottom);
            
            // 觸發動畫
            setTimeout(() => {
                flipTop.style.transform = 'rotateX(-90deg)';
                flipTop.style.transition = 'transform 0.4s';
            }, 10);
            
            // 動畫結束後更新卡片內容
            setTimeout(() => {
                topCard.textContent = newDigit;
                bottomCard.textContent = newDigit;
                
                // 移除動畫元素
                flipTop.remove();
                flipBottom.remove();
            }, 400);
        }
        
        // 更新日期顯示
        function updateDate() {
            const now = new Date();
            const options = { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                weekday: 'long'
            };
            
            // 根據當前語言環境格式化日期
            const dateStr = now.toLocaleDateString('zh-TW', options);
            dateDisplay.textContent = dateStr;
        }
        
        // 切換主題
        function toggleTheme() {
            isDarkTheme = !isDarkTheme;
            
            if (isDarkTheme) {
                // 深色主題
                document.body.style.backgroundColor = '#121212';
                themeToggle.textContent = '淺色主題';
            } else {
                // 淺色主題
                document.body.style.backgroundColor = '#f0f0f0';
                themeToggle.textContent = '深色主題';
            }
        }
        
        // 切換時間格式
        function toggleTimeFormat() {
            is24HourFormat = !is24HourFormat;
            formatToggle.textContent = is24HourFormat ? '12 小時制' : '24 小時制';
            
            // 立即更新時間顯示
            updateTime();
        }
        
        // 初始化時鐘
        window.onload = initClock;
    </script>
</body>
</html>

        }
        
        .flip-top {
            transform: rotateX(0deg);
        }
        
        .flip-bottom {
            top: 50%;
            transform-origin: top;
            line-height: 0;
            background-color: #1a1a1a;
        }
        
        /* 分隔符號 */
        .separator {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #00ccff;
            font-size: 5rem;
            font-weight: bold;
            margin: 0 5px;
        }
        
        .separator span {
            margin: 15px 0;
            text-shadow: 0 0 10px rgba(0, 200, 255, 0.7);
        }
        
        /* 控制按鈕 */
        .controls {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }
        
        button {
            padding: 12px 25px;
            font-size: 1.1rem;
            background-color: #00ccff;
            color: #121212;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s;
            box-shadow: 0 0 15px rgba(0, 200, 255, 0.5);
        }
        
        button:hover {
            background-color: #00aadd;
            transform: translateY(-3px);
            box-shadow: 0 0 20px rgba(0, 200, 255, 0.8);
        }
        
        button:active {
            transform: translateY(0);
        }
        
        /* 響應式設計 */
